<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/fullshadow"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:padding="20dp"

            android:layout_height="match_parent">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/questionupdate"
                android:textColor="@color/textcolor"
                android:textSize="30dp"
                android:text="Question No. 1"
                android:layout_weight="0.5"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/Noofopitions"
                android:entries="@array/Noofopitions"
                android:layout_marginTop="5dp"
                android:layout_height="40dp"></Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_weight="2">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/question"
                    android:paddingLeft="20dp"
                    android:textColor="@android:color/black"
                    android:hint="Question"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:hint="Opition 01"
                    android:paddingLeft="20dp"
                    android:id="@+id/op1"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Opition 02"
                    android:paddingLeft="20dp"
                    android:gravity="center"
                    android:id="@+id/op2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Opition 03"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    android:id="@+id/op3"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Opition 04"
                    android:paddingLeft="20dp"
                    android:id="@+id/op4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:visibility= "invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Opition 05"
                    android:paddingLeft="20dp"
                    android:id="@+id/op5"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:visibility= "invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:hint="Opition 05"
                    android:paddingLeft="20dp"
                    android:id="@+id/op6"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:visibility= "invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">


                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/buttonshape"
                        android:text="Next"
                        android:id="@+id/btnpollcreater"
                        android:textColor="@android:color/white"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>